<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WildGuard Sanctuary - Safari Booking</title>
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }

        body {
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
            background: linear-gradient(135deg, #1e3c72 0%, #2a5298 25%, #0f4c3a 50%, #2d5016 75%, #1a4d2e 100%);
            min-height: 100vh;
            overflow-x: hidden;
            position: relative;
            padding: 20px;
        }

        .bg-animation {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            pointer-events: none;
            z-index: 0;
        }

        .floating-leaf {
            position: absolute;
            color: rgba(76, 175, 80, 0.3);
            font-size: 24px;
            animation: float 8s infinite linear;
        }

        @keyframes float {
            0% {
                transform: translateY(100vh) rotate(0deg);
                opacity: 0;
            }
            10% {
                opacity: 1;
            }
            90% {
                opacity: 1;
            }
            100% {
                transform: translateY(-100px) rotate(360deg);
                opacity: 0;
            }
        }

        .container {
            position: relative;
            z-index: 1;
            max-width: 800px;
            margin: 0 auto;
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
            padding: 30px;
            background: rgba(76, 175, 80, 0.1);
            border-radius: 20px;
            backdrop-filter: blur(10px);
            border: 2px solid rgba(76, 175, 80, 0.3);
            animation: slideDown 1s ease-out;
        }

        @keyframes slideDown {
            from {
                transform: translateY(-100px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .header h1 {
            color: #4CAF50;
            font-size: 3em;
            margin-bottom: 10px;
            text-shadow: 2px 2px 4px rgba(0,0,0,0.3);
            animation: glow 2s ease-in-out infinite alternate;
        }

        @keyframes glow {
            from {
                text-shadow: 2px 2px 4px rgba(0,0,0,0.3), 0 0 10px rgba(76, 175, 80, 0.5);
            }
            to {
                text-shadow: 2px 2px 4px rgba(0,0,0,0.3), 0 0 20px rgba(76, 175, 80, 0.8);
            }
        }

        .header p {
            color: #81C784;
            font-size: 1.2em;
        }

        .form-section {
            background: rgba(255, 255, 255, 0.1);
            border-radius: 20px;
            padding: 40px;
            backdrop-filter: blur(15px);
            border: 2px solid rgba(76, 175, 80, 0.2);
            animation: fadeInUp 0.6s ease-out;
        }

        @keyframes fadeInUp {
            from {
                transform: translateY(50px);
                opacity: 0;
            }
            to {
                transform: translateY(0);
                opacity: 1;
            }
        }

        .section-title {
            color: #4CAF50;
            font-size: 2.2em;
            margin-bottom: 30px;
            text-align: center;
            position: relative;
        }

        .section-title::after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 3px;
            background: linear-gradient(90deg, #4CAF50, #81C784);
            border-radius: 2px;
        }

        .form-group {
            margin-bottom: 25px;
            position: relative;
        }

        .form-row {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 20px;
        }

        .form-label {
            display: block;
            color: #4CAF50;
            font-weight: bold;
            margin-bottom: 8px;
            font-size: 1.1em;
        }

        .form-input, .form-select, .form-textarea {
            width: 100%;
            padding: 15px 20px;
            border: 2px solid rgba(76, 175, 80, 0.3);
            border-radius: 15px;
            background: rgba(255, 255, 255, 0.1);
            color: #81C784;
            font-size: 16px;
            backdrop-filter: blur(10px);
            transition: all 0.3s ease;
        }

        .form-input:focus, .form-select:focus, .form-textarea:focus {
            outline: none;
            border-color: #4CAF50;
            box-shadow: 0 0 20px rgba(76, 175, 80, 0.3);
            transform: translateY(-2px);
        }

        .form-input::placeholder {
            color: rgba(129, 199, 132, 0.7);
        }

        .form-textarea {
            min-height: 120px;
            resize: vertical;
        }

        .form-checkbox-group {
            display: flex;
            flex-wrap: wrap;
            gap: 15px;
            margin-top: 10px;
        }

        .checkbox-item {
            display: flex;
            align-items: center;
            background: rgba(76, 175, 80, 0.1);
            padding: 10px 15px;
            border-radius: 25px;
            border: 2px solid rgba(76, 175, 80, 0.2);
            cursor: pointer;
            transition: all 0.3s ease;
        }

        .checkbox-item:hover {
            background: rgba(76, 175, 80, 0.2);
            transform: scale(1.05);
        }

        .checkbox-item input {
            margin-right: 8px;
            transform: scale(1.2);
        }

        .checkbox-item label {
            color: #81C784;
            cursor: pointer;
            font-weight: bold;
        }

        .submit-btn {
            background: linear-gradient(135deg, #4CAF50, #81C784);
            color: white;
            border: none;
            padding: 18px 40px;
            border-radius: 30px;
            cursor: pointer;
            font-weight: bold;
            font-size: 1.2em;
            transition: all 0.3s ease;
            position: relative;
            overflow: hidden;
            width: 100%;
            margin-top: 20px;
        }

        .submit-btn::after {
            content: '';
            position: absolute;
            top: 50%;
            left: 50%;
            width: 0;
            height: 0;
            background: rgba(255, 255, 255, 0.3);
            border-radius: 50%;
            transform: translate(-50%, -50%);
            transition: width 0.3s, height 0.3s;
        }

        .submit-btn:hover::after {
            width: 300px;
            height: 300px;
        }

        .submit-btn:hover {
            transform: scale(1.05);
            box-shadow: 0 10px 30px rgba(76, 175, 80, 0.4);
        }

        .price-card {
            background: rgba(76, 175, 80, 0.1);
            border-radius: 15px;
            padding: 20px;
            border: 2px solid rgba(76, 175, 80, 0.3);
            margin: 20px 0;
            position: relative;
            overflow: hidden;
        }

        .price-card::before {
            content: '';
            position: absolute;
            top: 0;
            left: 0;
            right: 0;
            height: 4px;
            background: linear-gradient(90deg, #4CAF50, #81C784, #4CAF50);
            background-size: 200% 100%;
            animation: shimmer 3s ease-in-out infinite;
        }

        @keyframes shimmer {
            0%, 100% {
                background-position: 200% 0;
            }
            50% {
                background-position: -200% 0;
            }
        }

        .price-item {
            display: flex;
            justify-content: space-between;
            align-items: center;
            padding: 10px 0;
            border-bottom: 1px solid rgba(76, 175, 80, 0.2);
            color: #81C784;
        }

        .price-item:last-child {
            border-bottom: none;
            font-weight: bold;
            font-size: 1.2em;
            color: #4CAF50;
        }

        .warning-card {
            background: rgba(255, 193, 7, 0.1);
            border: 2px solid rgba(255, 193, 7, 0.3);
            border-radius: 15px;
            padding: 20px;
            margin: 20px 0;
            color: #FFB74D;
        }

        .success-message {
            background: linear-gradient(135deg, #4CAF50, #81C784);
            color: white;
            padding: 20px;
            border-radius: 15px;
            text-align: center;
            margin: 20px 0;
            display: none;
            animation: successPulse 0.6s ease-out;
        }

        @keyframes successPulse {
            0% {
                transform: scale(0.8);
                opacity: 0;
            }
            50% {
                transform: scale(1.05);
            }
            100% {
                transform: scale(1);
                opacity: 1;
            }
        }

        .loading-spinner {
            border: 4px solid rgba(76, 175, 80, 0.3);
            border-top: 4px solid #4CAF50;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            animation: spin 1s linear infinite;
            margin: 0 auto 20px;
            display: none;
        }

        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }

        .input-icon {
            position: absolute;
            right: 15px;
            top: 50%;
            color: #4CAF50;
            font-size: 1.2em;
        }

        .form-group.has-icon {
            position: relative;
        }

        .form-group.has-icon .form-input {
            padding-right: 50px;
        }

        .back-btn {
            background: rgba(76, 175, 80, 0.2);
            color: #4CAF50;
            border: 2px solid rgba(76, 175, 80, 0.3);
            padding: 10px 20px;
            border-radius: 25px;
            cursor: pointer;
            font-weight: bold;
            margin-bottom: 20px;
            transition: all 0.3s ease;
        }

        .back-btn:hover {
            background: rgba(76, 175, 80, 0.3);
            transform: translateY(-2px);
        }

        .icon {
            font-size: 1.2em;
            margin-right: 8px;
        }

        @media (max-width: 768px) {
            .header h1 {
                font-size: 2em;
            }
            .form-row {
                grid-template-columns: 1fr;
            }
            .form-section {
                padding: 25px;
            }
        }
    </style>
</head>
<body>
    <div class="bg-animation">
        <!-- Floating leaves will be generated by JavaScript -->
    </div>

    <div class="container">
        <div class="header">
            <h1>🌿 WildGuard Sanctuary</h1>
            <p>Safari Booking Portal</p>
        </div>

        <div class="form-section">
            <button class="back-btn" onclick="window.location.href='login.html'">
                ← Back to Login
            </button>
            
            <h2 class="section-title">🎫 Generate Safari Ticket</h2>
            
            <form id="ticketForm">
                <div class="form-row">
                    <div class="form-group has-icon">
                        <label class="form-label">Full Name</label>
                        <input type="text" class="form-input" placeholder="Enter visitor's name" required>
                        <span class="input-icon">👤</span>
                    </div>
                    <div class="form-group has-icon">
                        <label class="form-label">Contact Number</label>
                        <input type="tel" class="form-input" placeholder="+91 98765 43210" required>
                        <span class="input-icon">📱</span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Safari Date</label>
                        <input type="date" class="form-input" required id="safariDate">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Time Slot</label>
                        <select class="form-select" required>
                            <option value="">Select Time Slot</option>
                            <option value="morning-1">Morning Safari 1 (6:00 AM - 9:00 AM)</option>
                            <option value="morning-2">Morning Safari 2 (9:30 AM - 12:30 PM)</option>
                            <option value="afternoon">Afternoon Safari (2:00 PM - 5:00 PM)</option>
                            <option value="evening">Evening Safari (5:30 PM - 8:30 PM)</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Safari Zone</label>
                        <select class="form-select" required id="safariZone" onchange="updatePricing()">
                            <option value="">Select Safari Zone</option>
                            <option value="core-a" data-price="2500">Core Zone A (Premium Wildlife) - ₹2,500</option>
                            <option value="buffer-b" data-price="2000">Buffer Zone B (Elephant Safari) - ₹2,000</option>
                            <option value="tourism-c" data-price="1500">Tourism Zone C (General Safari) - ₹1,500</option>
                            <option value="photography" data-price="3500">Photography Special Zone - ₹3,500</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Number of Persons</label>
                        <select class="form-select" required id="personCount" onchange="updatePricing()">
                            <option value="">Select</option>
                            <option value="1">1 Person</option>
                            <option value="2">2 Persons</option>
                            <option value="3">3 Persons</option>
                            <option value="4">4 Persons</option>
                            <option value="5">5 Persons</option>
                            <option value="6">6 Persons</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Additional Services</label>
                    <div class="form-checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" id="guide" value="guide" onchange="updatePricing()">
                            <label for="guide">🗣️ Professional Guide (+₹500)</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="camera" value="camera" onchange="updatePricing()">
                            <label for="camera">📸 Camera Equipment (+₹300)</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="lunch" value="lunch" onchange="updatePricing()">
                            <label for="lunch">🍽️ Packed Lunch (+₹200/person)</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="transport" value="transport" onchange="updatePricing()">
                            <label for="transport">🚗 Transportation (+₹800)</label>
                        </div>
                    </div>
                </div>

                <div class="price-card" id="pricingCard" style="display: none;">
                    <h3 style="color: #4CAF50; margin-bottom: 15px;">💰 Pricing Breakdown</h3>
                    <div class="price-item">
                        <span>Base Safari Cost:</span>
                        <span id="baseCost">₹0</span>
                    </div>
                    <div class="price-item">
                        <span>Additional Services:</span>
                        <span id="servicesCost">₹0</span>
                    </div>
                    <div class="price-item">
                        <span>GST (18%):</span>
                        <span id="gstAmount">₹0</span>
                    </div>
                    <div class="price-item">
                        <span><strong>Total Amount:</strong></span>
                        <span id="totalAmount"><strong>₹0</strong></span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Special Requirements</label>
                    <textarea class="form-textarea" placeholder="Any special requirements or accessibility needs..."></textarea>
                </div>

                <div class="warning-card">
                    <strong>⚠️ Important Guidelines:</strong><br>
                    • Arrive 30 minutes before safari time<br>
                    • Carry valid ID proof<br>
                    • Follow all safety instructions<br>
                    • No loud noises or sudden movements<br>
                    • Tickets are non-refundable
                </div>

                <div class="loading-spinner" id="ticketLoading"></div>
                <div class="success-message" id="ticketSuccess">
                    🎫 Ticket generated successfully! Booking ID: <span id="bookingId"></span>
                </div>

                <button type="submit" class="submit-btn">
                    <span class="icon">🎫</span>Generate Ticket
                </button>
            </form>
        </div>
    </div>

    <script>
        // Create floating leaves animation
        function createFloatingLeaf() {
            const leaf = document.createElement('div');
            leaf.className = 'floating-leaf';
            leaf.innerHTML = Math.random() > 0.5 ? '🍃' : '🌿';
            leaf.style.left = Math.random() * 100 + '%';
            leaf.style.animationDelay = Math.random() * 5 + 's';
            leaf.style.animationDuration = (Math.random() * 4 + 6) + 's';
            
            document.querySelector('.bg-animation').appendChild(leaf);
            
            setTimeout(() => {
                if (leaf.parentNode) {
                    leaf.parentNode.removeChild(leaf);
                }
            }, 10000);
        }

        setInterval(createFloatingLeaf, 2000);
        for (let i = 0; i < 5; i++) {
            setTimeout(createFloatingLeaf, i * 500);
        }

        // Set minimum date for safari booking
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            const tomorrow = new Date(today);
            tomorrow.setDate(tomorrow.getDate() + 1);
            
            const safariDateInput = document.getElementById('safariDate');
            if (safariDateInput) {
                safariDateInput.min = tomorrow.toISOString().split('T')[0];
            }
        });

        // Pricing calculation
        function updatePricing() {
            const zoneSelect = document.getElementById('safariZone');
            const personCountSelect = document.getElementById('personCount');
            const pricingCard = document.getElementById('pricingCard');
            
            if (!zoneSelect.value || !personCountSelect.value) {
                pricingCard.style.display = 'none';
                return;
            }
            
            const basePrice = parseInt(zoneSelect.options[zoneSelect.selectedIndex].dataset.price || 0);
            const personCount = parseInt(personCountSelect.value);
            const baseCost = basePrice * personCount;
            
            let servicesCost = 0;
            
            if (document.getElementById('guide').checked) servicesCost += 500;
            if (document.getElementById('camera').checked) servicesCost += 300;
            if (document.getElementById('lunch').checked) servicesCost += 200 * personCount;
            if (document.getElementById('transport').checked) servicesCost += 800;
            
            const subtotal = baseCost + servicesCost;
            const gst = Math.round(subtotal * 0.18);
            const total = subtotal + gst;
            
            document.getElementById('baseCost').textContent = `₹${baseCost.toLocaleString()}`;
            document.getElementById('servicesCost').textContent = `₹${servicesCost.toLocaleString()}`;
            document.getElementById('gstAmount').textContent = `₹${gst.toLocaleString()}`;
            document.getElementById('totalAmount').textContent = `₹${total.toLocaleString()}`;
            
            pricingCard.style.display = 'block';
        }

        // Add notification system
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed; top: 20px; right: 20px; 
                background: ${type === 'success' ? 'rgba(76, 175, 80, 0.9)' : 'rgba(244, 67, 54, 0.9)'}; 
                color: white; padding: 15px 20px; border-radius: 10px; 
                z-index: 1001; font-weight: bold;
                transform: translateX(300px); transition: transform 0.3s ease;
                max-width: 250px; backdrop-filter: blur(10px);
            `;
            notification.textContent = message;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.transform = 'translateX(0)';
            }, 100);
            
            setTimeout(() => {
                notification.style.transform = 'translateX(300px)';
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 300);
            }, 4000);
        }

        // Ticket form submission
        document.getElementById('ticketForm').addEventListener('submit', function(e) {
            e.preventDefault();
            
            const loading = document.getElementById('ticketLoading');
            const success = document.getElementById('ticketSuccess');
            
            loading.style.display = 'block';
            
            setTimeout(() => {
                loading.style.display = 'none';
                success.style.display = 'block';
                
                const bookingId = 'WGS-' + new Date().getFullYear() + '-' + String(Math.floor(Math.random() * 10000)).padStart(4, '0');
                document.getElementById('bookingId').textContent = bookingId;
                
                setTimeout(() => {
                    success.style.display = 'none';
                    this.reset();
                    document.getElementById('pricingCard').style.display = 'none';
                }, 5000);
            }, 2000);
        });

        setTimeout(() => {
            showNotification('🎫 Book your safari adventure!');
        }, 1000);
    </script>
</body>
</html>