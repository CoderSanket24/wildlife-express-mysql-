<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WildGuard Sanctuary - Safari Booking</title>
    <link rel="stylesheet" href="/ticket.css">
</head>
<body>
    <div class="bg-animation">
    </div>

    <div class="container">
        <div class="header">
            <h1>üåø WildGuard Sanctuary</h1>
            <p>Safari Booking Portal</p>
        </div>

        <div class="form-section">
            <button class="back-btn" onclick="window.location.href='/'">
                ‚Üê Back to Home
            </button>
            
            <h2 class="section-title">üé´ Generate Safari Ticket</h2>
            
            <form id="ticketForm">
                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Safari Date</label>
                        <input type="date" name="safari_date" class="form-input" required id="safariDate">
                    </div>
                    <div class="form-group">
                        <label class="form-label">Time Slot</label>
                        <select name="time_slot" class="form-select" required>
                            <option value="">Select Time Slot</option>
                            <option value="morning-1">Morning Safari 1 (6:00 AM - 9:00 AM)</option>
                            <option value="morning-2">Morning Safari 2 (9:30 AM - 12:30 PM)</option>
                            <option value="afternoon">Afternoon Safari (2:00 PM - 5:00 PM)</option>
                            <option value="evening">Evening Safari (5:30 PM - 8:30 PM)</option>
                        </select>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Safari Zone</label>
                        <select name="safari_zone" class="form-select" required id="safariZone" onchange="updatePricing()">
                            <option value="">Select Safari Zone</option>
                            <option value="core-a" data-price="2500">Core Zone A (Premium Wildlife) - ‚Çπ2,500</option>
                            <option value="buffer-b" data-price="2000">Buffer Zone B (Elephant Safari) - ‚Çπ2,000</option>
                            <option value="tourism-c" data-price="1500">Tourism Zone C (General Safari) - ‚Çπ1,500</option>
                            <option value="photography" data-price="3500">Photography Special Zone - ‚Çπ3,500</option>
                        </select>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Number of Persons</label>
                        <select name="person_count" class="form-select" required id="personCount" onchange="updatePricing()">
                            <option value="">Select</option>
                            <option value="1">1 Person</option>
                            <option value="2">2 Persons</option>
                            <option value="3">3 Persons</option>
                            <option value="4">4 Persons</option>
                            <option value="5">5 Persons</option>
                            <option value="6">6 Persons</option>
                        </select>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Additional Services</label>
                    <div class="form-checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" name="has_guide" id="guide" onchange="updatePricing()">
                            <label for="guide">üó£Ô∏è Professional Guide (+‚Çπ500)</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" name="has_camera" id="camera" onchange="updatePricing()">
                            <label for="camera">üì∏ Camera Equipment (+‚Çπ250)</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" name="has_lunch" id="lunch" onchange="updatePricing()">
                            <label for="lunch">üçΩÔ∏è Packed Lunch (+‚Çπ300/person)</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" name="has_transport" id="transport" onchange="updatePricing()">
                            <label for="transport">üöó Transportation (+‚Çπ1000)</label>
                        </div>
                    </div>
                </div>

                <div class="price-card" id="pricingCard" style="display: none;">
                    <h3 style="color: #4CAF50; margin-bottom: 15px;">üí∞ Pricing Breakdown</h3>
                    <div class="price-item">
                        <span>Base Safari Cost:</span>
                        <span id="baseCost">‚Çπ0</span>
                    </div>
                    <div class="price-item">
                        <span>Additional Services:</span>
                        <span id="servicesCost">‚Çπ0</span>
                    </div>
                    <div class="price-item">
                        <span>GST (18%):</span>
                        <span id="gstAmount">‚Çπ0</span>
                    </div>
                    <div class="price-item">
                        <span><strong>Total Amount:</strong></span>
                        <span id="totalAmount"><strong>‚Çπ0</strong></span>
                    </div>
                </div>

                <div class="warning-card">
                    <strong>‚ö†Ô∏è Important Guidelines:</strong><br>
                    ‚Ä¢ Arrive 30 minutes before safari time<br>
                    ‚Ä¢ Carry valid ID proof<br>
                    ‚Ä¢ Follow all safety instructions<br>
                    ‚Ä¢ No loud noises or sudden movements<br>
                    ‚Ä¢ Tickets are non-refundable
                </div>

                <div class="loading-spinner" id="ticketLoading"></div>
                <div class="success-message" id="ticketSuccess">
                    üé´ Ticket generated successfully! Booking ID: <span id="bookingId"></span>
                </div>

                <button type="submit" class="submit-btn">
                    <span class="icon">üé´</span>Generate Ticket
                </button>
            </form>
        </div>
    </div>

    <script>
        // Create floating leaves animation
        function createFloatingLeaf() {
            const leaf = document.createElement('div');
            leaf.className = 'floating-leaf';
            leaf.innerHTML = Math.random() > 0.5 ? 'üçÉ' : 'üåø';
            leaf.style.left = Math.random() * 100 + '%';
            leaf.style.animationDelay = Math.random() * 5 + 's';
            leaf.style.animationDuration = (Math.random() * 4 + 6) + 's';
            
            document.querySelector('.bg-animation').appendChild(leaf);
            
            setTimeout(() => {
                if (leaf.parentNode) {
                    leaf.parentNode.removeChild(leaf);
                }
            }, 10000);
        }

        setInterval(createFloatingLeaf, 2000);
        for (let i = 0; i < 5; i++) {
            setTimeout(createFloatingLeaf, i * 500);
        }

        // Set minimum date for safari booking
        document.addEventListener('DOMContentLoaded', function() {
            const today = new Date();
            const tomorrow = new Date(today);
            tomorrow.setDate(tomorrow.getDate() + 1);
            
            const safariDateInput = document.getElementById('safariDate');
            if (safariDateInput) {
                safariDateInput.min = tomorrow.toISOString().split('T')[0];
            }
        });

        let pricing = { base_cost: 0, services_cost: 0, gst_amount: 0, total_amount: 0 };

        // Pricing calculation
        function updatePricing() {
            const zoneSelect = document.getElementById('safariZone');
            const personCountSelect = document.getElementById('personCount');
            const pricingCard = document.getElementById('pricingCard');
            
            if (!zoneSelect.value || !personCountSelect.value) {
                pricingCard.style.display = 'none';
                return;
            }
            
            const basePrice = parseInt(zoneSelect.options[zoneSelect.selectedIndex].dataset.price || 0);
            const personCount = parseInt(personCountSelect.value);
            const baseCost = basePrice * personCount;
            
            let servicesCost = 0;
            
            if (document.getElementById('guide').checked) servicesCost += 500;
            if (document.getElementById('camera').checked) servicesCost += 250;
            if (document.getElementById('lunch').checked) servicesCost += 300 * personCount;
            if (document.getElementById('transport').checked) servicesCost += 1000;
            
            const subtotal = baseCost + servicesCost;
            const gst = Math.round(subtotal * 0.18);
            const total = subtotal + gst;

            pricing.base_cost = baseCost;
            pricing.services_cost = servicesCost;
            pricing.gst_amount = gst;
            pricing.total_amount = total;
            
            document.getElementById('baseCost').textContent = `‚Çπ${baseCost.toLocaleString()}`;
            document.getElementById('servicesCost').textContent = `‚Çπ${servicesCost.toLocaleString()}`;
            document.getElementById('gstAmount').textContent = `‚Çπ${gst.toLocaleString()}`;
            document.getElementById('totalAmount').textContent = `‚Çπ${total.toLocaleString()}`;
            
            pricingCard.style.display = 'block';
        }

        // Add notification system
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed; top: 20px; right: 20px; 
                background: ${type === 'success' ? 'rgba(76, 175, 80, 0.9)' : 'rgba(244, 67, 54, 0.9)'}; 
                color: white; padding: 15px 20px; border-radius: 10px; 
                z-index: 1001; font-weight: bold;
                transform: translateX(300px); transition: transform 0.3s ease;
                max-width: 250px; backdrop-filter: blur(10px);
            `;
            notification.textContent = message;
            document.body.appendChild(notification);
            
            setTimeout(() => {
                notification.style.transform = 'translateX(0)';
            }, 100);
            
            setTimeout(() => {
                notification.style.transform = 'translateX(300px)';
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 300);
            }, 4000);
        }

        // Ticket form submission
        document.getElementById('ticketForm').addEventListener('submit', async function(e) {
            e.preventDefault();
            
            const form = e.target;
            const loading = document.getElementById('ticketLoading');
            const successDiv = document.getElementById('ticketSuccess');
            const bookingIdSpan = document.getElementById('bookingId');

            loading.style.display = 'block';

            const formData = new FormData(form);
            const data = Object.fromEntries(formData.entries());

            // Add calculated pricing and a unique booking ID to the data
            Object.assign(data, pricing);
            data.booking_id = 'WGS-' + new Date().getFullYear() + '-' + String(Math.floor(Math.random() * 10000)).padStart(4, '0');

            try {
                const response = await fetch('/booking', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(data),
                });

                const result = await response.json();

                loading.style.display = 'none';

                if (result.success) {
                    bookingIdSpan.textContent = result.bookingId;
                    successDiv.style.display = 'block';
                    showNotification(result.message || 'Booking successful!', 'success');
                    setTimeout(() => {
                        successDiv.style.display = 'none';
                        form.reset();
                        updatePricing(); // To hide the pricing card
                    }, 5000);
                } else {
                    showNotification(result.message || 'Booking failed!', 'error');
                }
            } catch (error) {
                loading.style.display = 'none';
                showNotification('An error occurred. Please try again.', 'error');
                console.error('Form submission error:', error);
            }
        });

        setTimeout(() => {
            showNotification('üé´ Book your safari adventure!');
        }, 1000);
    </script>
</body>
</html>