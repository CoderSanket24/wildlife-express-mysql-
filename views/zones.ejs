<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../style.css">
</head>

<body>
    <div class="bg-animation">
        <!-- Floating leaves will be generated by JavaScript -->
    </div>
    <div class="container">
        <!-- Zones Section -->
        <div id="zones" class="content-section">
            <h2 class="section-title">üå≤ Zone & Area Management</h2>

            <div class="stats-container">
                <div class="stat-item">
                    <div class="stat-number">8</div>
                    <div class="stat-label">Active Zones</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">2,450</div>
                    <div class="stat-label">Total Area (sq km)</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">124</div>
                    <div class="stat-label">Camera Traps</div>
                </div>
            </div>

            <button class="add-btn">+ Add New Zone</button>

            <div class="data-grid">
                <div class="data-card">
                    <div class="card-header">
                        <span class="icon">üèîÔ∏è</span>Core Zone A
                    </div>
                    <div class="card-content">
                        <p><strong>Area Size:</strong> 450 sq km</p>
                        <p><strong>Climate:</strong> Tropical Monsoon</p>
                        <p><strong>Camera Traps:</strong> 25 active</p>
                        <p><strong>Access Level:</strong> Restricted</p>
                        <p><strong>Primary Species:</strong> Tigers, Leopards</p>
                    </div>
                </div>

                <div class="data-card">
                    <div class="card-header">
                        <span class="icon">üåä</span>Buffer Zone B
                    </div>
                    <div class="card-content">
                        <p><strong>Area Size:</strong> 380 sq km</p>
                        <p><strong>Climate:</strong> Semi-Deciduous</p>
                        <p><strong>Camera Traps:</strong> 18 active</p>
                        <p><strong>Access Level:</strong> Limited Tourism</p>
                        <p><strong>Primary Species:</strong> Elephants, Deer</p>
                    </div>
                </div>

                <div class="data-card">
                    <div class="card-header">
                        <span class="icon">üèûÔ∏è</span>Tourism Zone C
                    </div>
                    <div class="card-content">
                        <p><strong>Area Size:</strong> 220 sq km</p>
                        <p><strong>Climate:</strong> Dry Deciduous</p>
                        <p><strong>Camera Traps:</strong> 12 active</p>
                        <p><strong>Access Level:</strong> Public Safari</p>
                        <p><strong>Primary Species:</strong> Various Birds, Deer</p>
                    </div>
                </div>

                <% zones.map(({zone_id, area, climate, camera_traps, access_level, primary_species})=> { %>
                    <div class="data-card">
                        <div class="card-header">
                            <span class="icon">üèûÔ∏è</span> Zone <%=zone_id%>
                        </div>
                        <div class="card-content">
                            <p><strong>Area Size:</strong> <%=area%> sq km</p>
                            <p><strong>Climate:</strong> <%=climate%></p>
                            <p><strong>Camera Traps:</strong> <%=camera_traps%> active</p>
                            <p><strong>Access Level:</strong> <%=access_level%></p>
                            <p><strong>Primary Species:</strong> <%=primary_species%></p>
                        </div>
                    </div>
                    <% }) %>
            </div>
        </div>
    </div>
    <script src="../app.js"></script>
</body>

</html>