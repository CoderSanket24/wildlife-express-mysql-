                <div class="info-card">
                    <strong>üìã Zone Management Guidelines:</strong><br>
                    ‚Ä¢ Ensure accurate GPS coordinates for zone mapping<br>
                    ‚Ä¢ Core zones typically have restricted access<br>
                    ‚Ä¢ Tourism zones should have adequate facilities<br>
                    ‚Ä¢ Regular patrol schedules maintain zone security<br>
                    ‚Ä¢ Camera traps help monitor wildlife activity
                </div>

                <div class="loading-spinner" id="loadingSpinner"></div>
                <div class="success-message" id="successMessage">
                    ‚úÖ Zone added successfully! Zone Code: <span id="generatedZoneCode"></span>
                </div>

                <button type="submit" class="submit-btn">
                    <span class="icon">üå≤</span>Add Zone to System
                </button>
            </form>
        </div>
    </div>

    <script>
        // Create floating leaves animation
        function createFloatingLeaf() {
            const leaf = document.createElement('div');
            leaf.className = 'floating-leaf';
            leaf.innerHTML = Math.random() > 0.5 ? 'üçÉ' : 'üåø';
            leaf.style.left = Math.random() * 100 + '%';
            leaf.style.animationDelay = Math.random() * 5 + 's';
            leaf.style.animationDuration = (Math.random() * 4 + 6) + 's';

            document.querySelector('.bg-animation').appendChild(leaf);

            setTimeout(() => {
                if (leaf.parentNode) {
                    leaf.parentNode.removeChild(leaf);
                }
            }, 10000);
        }

        setInterval(createFloatingLeaf, 2000);
        for (let i = 0; i < 5; i++) {
            setTimeout(createFloatingLeaf, i * 500);
        }

        // Add interactive zone type selection
        document.querySelectorAll('.zone-type-card').forEach(card => {
            card.addEventListener('click', function () {
                document.querySelectorAll('.zone-type-card').forEach(c => {
                    c.style.background = 'rgba(76, 175, 80, 0.1)';
                    c.style.borderColor = 'rgba(76, 175, 80, 0.2)';
                    c.style.boxShadow = 'none';
                });

                this.style.background = 'rgba(76, 175, 80, 0.3)';
                this.style.borderColor = '#4CAF50';
                this.style.boxShadow = '0 5px 15px rgba(76, 175, 80, 0.3)';
            });
        });

        // Set access level function
        function setAccessLevel(level) {
            document.getElementById('accessLevel').value = level;
            showNotification('Access level set to: ' + level);
        }

        // Character counter for primary species
        document.getElementById('primarySpecies').addEventListener('input', function () {
            const counter = document.getElementById('charCounter');
            const length = this.value.length;
            counter.textContent = `${length} / 200 characters`;

            if (length > 180) {
                counter.style.color = '#f44336';
            } else {
                counter.style.color = '#81C784';
            }
        });

        // Validate Zone ID format (2 characters)
        document.getElementById('zoneId').addEventListener('input', function () {
            this.value = this.value.toUpperCase().slice(0, 2);
        });

        // Notification system
        function showNotification(message, type = 'success') {
            const notification = document.createElement('div');
            notification.style.cssText = `
                position: fixed; top: 20px; right: 20px; 
                background: ${type === 'success' ? 'rgba(76, 175, 80, 0.9)' : 'rgba(244, 67, 54, 0.9)'}; 
                color: white; padding: 15px 20px; border-radius: 10px; 
                z-index: 1001; font-weight: bold;
                transform: translateX(300px); transition: transform 0.3s ease;
                max-width: 250px; backdrop-filter: blur(10px);
                box-shadow: 0 5px 15px rgba(0,0,0,0.3);
            `;
            notification.textContent = message;
            document.body.appendChild(notification);

            setTimeout(() => {
                notification.style.transform = 'translateX(0)';
            }, 100);

            setTimeout(() => {
                notification.style.transform = 'translateX(300px)';
                setTimeout(() => {
                    if (notification.parentNode) {
                        notification.parentNode.removeChild(notification);
                    }
                }, 300);
            }, 4000);
        }

        // Form submission
        document.getElementById('addZoneForm').addEventListener('submit', async function (e) {
            e.preventDefault();

            const loading = document.getElementById('loadingSpinner');
            const success = document.getElementById('successMessage');

            // Validate Zone ID (exactly 2 characters)
            const zoneId = document.getElementById('zoneId').value;

            // Get form data matching database schema
            const formData = {
                zone_id: zoneId,
                zone_name: document.getElementById('zoneName').value,
                area: parseFloat(document.getElementById('area').value),
                climate: document.getElementById('climate').value,
                camera_traps: parseInt(document.getElementById('cameraTraps').value),
                access_level: document.getElementById('accessLevel').value,
                primary_species: document.getElementById('primarySpecies').value
            };

            // Validate data
            if (formData.climate.length > 30) {
                showNotification('Climate must be 30 characters or less', 'error');
                return;
            }

            if (formData.access_level.length > 30) {
                showNotification('Access level must be 30 characters or less', 'error');
                return;
            }

            if (formData.primary_species.length > 200) {
                showNotification('Primary species must be 200 characters or less', 'error');
                return;
            }

            loading.style.display = 'block';

            try {
                const response = await fetch('/addZone', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify(formData),
                });

                const result = await response.json();

                loading.style.display = 'none';

                if (result.success) {
                    success.style.display = 'block';

                    document.getElementById('generatedZoneCode').textContent = formData.zone_id;

                    showNotification('Zone added successfully!');

                    // Log data (in real app, this would be sent to backend)
                    console.log('Zone Data for Database:', formData);
                    console.log('SQL INSERT would be:');
                    console.log(`INSERT INTO zones (zone_id, zone_name, area, climate, camera_traps, access_level, primary_species) VALUES ('${formData.zone_id}', '${formData.zone_name}', ${formData.area}, '${formData.climate}', ${formData.camera_traps}, '${formData.access_level}', '${formData.primary_species}');`);

                    setTimeout(() => {
