<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../style.css">
</head>

<body>
    <div class="bg-animation">
        <!-- Floating leaves will be generated by JavaScript -->
    </div>
    <div class="container">
        <!-- Staff Section -->
        <div id="staff" class="content-section">
            <h2 class="section-title">üëÆ Rangers & Staff Directory</h2>

            <div class="stats-container">
                <div class="stat-item">
                    <div class="stat-number">45</div>
                    <div class="stat-label">Total Staff</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">28</div>
                    <div class="stat-label">Field Rangers</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">12</div>
                    <div class="stat-label">On Duty Today</div>
                </div>
            </div>

            <button class="add-btn">+ Add New Staff</button>

            <div class="data-grid">
                <div class="data-card">
                    <div class="card-header">
                        <span class="icon">üë®‚Äçüåæ</span>Raj Kumar
                    </div>
                    <div class="card-content">
                        <p><strong>Role:</strong> Senior Forest Ranger</p>
                        <p><strong>Employee ID:</strong> RNG-101</p>
                        <p><strong>Assigned Zone:</strong> Core Zone A</p>
                        <p><strong>Shift:</strong> Morning (6 AM - 2 PM)</p>
                        <p><strong>Experience:</strong> 12 years</p>
                    </div>
                </div>

                <div class="data-card">
                    <div class="card-header">
                        <span class="icon">üë©‚Äç‚öïÔ∏è</span>Dr. Priya Sharma
                    </div>
                    <div class="card-content">
                        <p><strong>Role:</strong> Wildlife Veterinarian</p>
                        <p><strong>Employee ID:</strong> VET-201</p>
                        <p><strong>Assigned Zone:</strong> Medical Center</p>
                        <p><strong>Shift:</strong> Day (9 AM - 6 PM)</p>
                        <p><strong>Specialization:</strong> Large Mammals</p>
                    </div>
                </div>

                <% staff.map(({employee_id,employee_name,age,gender,assigned_zone,experience_years,shift,
                    role,category})=>{ %>
                    <div class="data-card">
                        <div class="card-header">
                            <%if (gender=='Male'){%>
                                <span class="icon">üë®‚Äçüíº</span>
                            <%}else{%>
                                <span class="icon">üë©‚Äçüíº</span>
                            <%}%>
                            <%=employee_name%>
                        </div>
                        <div class="card-content">
                            <p><strong>Role:</strong>
                                <%=role%>
                            </p>
                            <p><strong>Employee ID:</strong>
                                <%=employee_id%>
                            </p>
                            <p><strong>Assigned Zone:</strong>
                                <%=assigned_zone%>
                            </p>
                            <p><strong>Shift:</strong>
                                <%=shift%>
                            </p>
                            <p><strong>Experience:</strong>
                                <%=experience_years%> years
                            </p>
                            <p><strong>Category:</strong>
                                <%=category%>
                            </p>
                        </div>
                    </div>
                    <%})%>
            </div>
        </div>
    </div>
    <script src=" ../app.js">
    </script>
</body>

</html>