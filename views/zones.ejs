<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../style.css">
</head>

<body>
    <div class="bg-animation">
        <!-- Floating leaves will be generated by JavaScript -->
    </div>
    <div class="container">
        <a href="/" class="back-btn">‚Üê Back to Dashboard</a>
        <!-- Zones Section -->
        <div id="zones" class="content-section">
            <h2 class="section-title">üå≤ Zone & Area Management</h2>

            <div class="stats-container">
                <div class="stat-item">
                    <div class="stat-number"><%=activeZones%></div>
                    <div class="stat-label">Active Zones</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number"><%=totalArea%></div>
                    <div class="stat-label">Total Area (sq km)</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number"><%=totalCameraTraps%></div>
                    <div class="stat-label">Camera Traps</div>
                </div>
            </div>

            <!-- Filter Section -->
            <div class="filter-section">
                <h3 class="filter-title">üîç Filter & Search Zones</h3>
                <form id="filterForm" method="GET" action="/zones" class="filter-form">
                    <div class="filter-row">
                        <div class="filter-group">
                            <label for="search">Search:</label>
                            <input type="text" id="search" name="search" value="<%=filters.search%>" 
                                   placeholder="Search by name, ID, or species...">
                        </div>
                        
                        <div class="filter-group">
                            <label for="access_level">Access Level:</label>
                            <select id="access_level" name="access_level">
                                <option value="">All Access Levels</option>
                                <% if (filterOptions && filterOptions.accessLevels) { %>
                                    <% filterOptions.accessLevels.forEach(level => { %>
                                        <option value="<%=level%>" <%=filters.access_level === level ? 'selected' : ''%>>
                                            <%=level%>
                                        </option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                        
                        <div class="filter-group">
                            <label for="climate">Climate:</label>
                            <select id="climate" name="climate">
                                <option value="">All Climates</option>
                                <% if (filterOptions && filterOptions.climates) { %>
                                    <% filterOptions.climates.forEach(climate => { %>
                                        <option value="<%=climate%>" <%=filters.climate === climate ? 'selected' : ''%>>
                                            <%=climate%>
                                        </option>
                                    <% }); %>
                                <% } %>
                            </select>
                        </div>
                    </div>
                    
                    <div class="filter-row">
                        <div class="filter-group">
                            <label for="min_area">Min Area (sq km):</label>
                            <input type="number" id="min_area" name="min_area" value="<%=filters.min_area || ''%>" 
                                   step="0.1" min="0" placeholder="Min area">
                        </div>
                        
                        <div class="filter-group">
                            <label for="max_area">Max Area (sq km):</label>
                            <input type="number" id="max_area" name="max_area" value="<%=filters.max_area || ''%>" 
                                   step="0.1" min="0" placeholder="Max area">
                        </div>
                        
                        <div class="filter-group">
                            <label for="min_cameras">Min Cameras:</label>
                            <input type="number" id="min_cameras" name="min_cameras" value="<%=filters.min_cameras || ''%>" 
                                   min="0" placeholder="Min cameras">
                        </div>
                        
                        <div class="filter-group">
                            <label for="max_cameras">Max Cameras:</label>
                            <input type="number" id="max_cameras" name="max_cameras" value="<%=filters.max_cameras || ''%>" 
                                   min="0" placeholder="Max cameras">
                        </div>
                    </div>
                    
                    <div class="filter-row">
                        <div class="filter-group">
                            <label for="sort_by">Sort By:</label>
                            <select id="sort_by" name="sort_by">
                                <option value="zone_name" <%=filters.sort_by === 'zone_name' ? 'selected' : ''%>>Zone Name</option>
                                <option value="area" <%=filters.sort_by === 'area' ? 'selected' : ''%>>Area Size</option>
                                <option value="camera_traps" <%=filters.sort_by === 'camera_traps' ? 'selected' : ''%>>Camera Count</option>
                                <option value="access_level" <%=filters.sort_by === 'access_level' ? 'selected' : ''%>>Access Level</option>
                                <option value="climate" <%=filters.sort_by === 'climate' ? 'selected' : ''%>>Climate</option>
                            </select>
                        </div>
                        
                        <div class="filter-group">
                            <label for="sort_order">Sort Order:</label>
                            <select id="sort_order" name="sort_order">
                                <option value="ASC" <%=filters.sort_order === 'ASC' ? 'selected' : ''%>>Ascending</option>
                                <option value="DESC" <%=filters.sort_order === 'DESC' ? 'selected' : ''%>>Descending</option>
                            </select>
                        </div>
                        
                        <div class="filter-actions">
                            <button type="submit" class="filter-btn apply-btn">üîç Apply Filters</button>
                            <button type="button" class="filter-btn clear-btn" onclick="clearFilters()">üóëÔ∏è Clear</button>
                        </div>
                    </div>
                </form>
            </div>

            <!-- Results Summary -->
            <div class="results-summary">
                <p>Showing <strong><%=activeZones%></strong> zones 
                <% if (filters.search || filters.access_level || filters.climate || filters.min_area || filters.max_area || filters.min_cameras || filters.max_cameras) { %>
                    (filtered results)
                <% } %>
                </p>
            </div>

            <button class="add-btn" onclick="window.location.href='/addZone'">+ Add New Zone</button>

            <div class="data-grid">
                <% if (zones && zones.length > 0) { %>
                    <% zones.forEach(({zone_id, zone_name, area, climate, camera_traps, access_level, primary_species}) => { %>
                        <div class="data-card" data-zone-id="<%=zone_id%>">
                            <div class="card-header">
                                <span class="icon">üèûÔ∏è</span><%=zone_name%>
                                <span class="zone-id-badge"><%=zone_id%></span>
                            </div>
                            <div class="card-content">
                                <div class="zone-info-grid">
                                    <div class="info-item">
                                        <span class="info-label">Area Size:</span>
                                        <span class="info-value"><%=area%> sq km</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Climate:</span>
                                        <span class="info-value"><%=climate%></span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Camera Traps:</span>
                                        <span class="info-value"><%=camera_traps%> active</span>
                                    </div>
                                    <div class="info-item">
                                        <span class="info-label">Access Level:</span>
                                        <span class="info-value access-<%=access_level.toLowerCase().replace(/\s+/g, '-')%>">
                                            <%=access_level%>
                                        </span>
                                    </div>
                                </div>
                                <div class="species-info">
                                    <span class="info-label">Primary Species:</span>
                                    <p class="species-list"><%=primary_species%></p>
                                </div>
                            </div>
                            <div class="card-actions">
                                <button class="action-btn view-btn" onclick="viewZoneDetails('<%=zone_id%>')">
                                    üëÅÔ∏è View Details
                                </button>
                                <button class="action-btn edit-btn" onclick="editZone('<%=zone_id%>')">
                                    ‚úèÔ∏è Edit
                                </button>
                            </div>
                        </div>
                    <% }); %>
                <% } else { %>
                    <div class="no-results">
                        <h3>üîç No Zones Found</h3>
                        <p>No zones match your current filter criteria.</p>
                        
                        <div class="suggestions">
                            <h4>Try adjusting your filters:</h4>
                            <ul>
                                <li>Clear some filters to broaden your search</li>
                                <li>Check your spelling in the search field</li>
                                <li>Adjust the area or camera count ranges</li>
                                <li>Try a different access level or climate</li>
                            </ul>
                        </div>
                        
                        <div style="margin-top: 20px;">
                            <button class="filter-btn clear-btn" onclick="clearFilters()">
                                üóëÔ∏è Clear All Filters
                            </button>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <script src="/script.js"></script>
    
    <style>
        /* Filter Section Styles */
        .filter-section {
            background: rgba(76, 175, 80, 0.1);
            border-radius: 15px;
            padding: 25px;
            margin: 20px 0;
            border: 2px solid rgba(76, 175, 80, 0.2);
            backdrop-filter: blur(10px);
        }
        
        .filter-title {
            color: #4CAF50;
            margin-bottom: 20px;
            font-size: 1.3em;
            text-align: center;
        }
        
        .filter-form {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }
        
        .filter-row {
            display: grid;
            grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
            gap: 15px;
            align-items: end;
        }
        
        .filter-group {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }
        
        .filter-group label {
            color: #4CAF50;
            font-weight: bold;
            font-size: 0.9em;
        }
        
        .filter-group input,
        .filter-group select {
            padding: 10px 12px;
            border: 2px solid rgba(76, 175, 80, 0.3);
            border-radius: 8px;
            background: rgba(255, 255, 255, 0.1);
            color: #C8E6C9;
            font-size: 14px;
            transition: all 0.3s ease;
        }
        
        .filter-group input:focus,
        .filter-group select:focus {
            outline: none;
            border-color: #4CAF50;
            box-shadow: 0 0 10px rgba(76, 175, 80, 0.3);
        }
        
        .filter-group input::placeholder {
            color: rgba(200, 230, 201, 0.6);
        }
        
        .filter-actions {
            display: flex;
            gap: 10px;
            align-items: center;
        }
        
        .filter-btn {
            padding: 10px 20px;
            border: none;
            border-radius: 20px;
            cursor: pointer;
            font-weight: bold;
            font-size: 0.9em;
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-flex;
            align-items: center;
            gap: 5px;
        }
        
        .apply-btn {
            background: linear-gradient(135deg, #4CAF50, #81C784);
            color: white;
        }
        
        .apply-btn:hover {
            background: linear-gradient(135deg, #45a049, #66bb6a);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(76, 175, 80, 0.4);
        }
        
        .clear-btn {
            background: linear-gradient(135deg, #f44336, #ef5350);
            color: white;
        }
        
        .clear-btn:hover {
            background: linear-gradient(135deg, #d32f2f, #e53935);
            transform: translateY(-2px);
            box-shadow: 0 5px 15px rgba(244, 67, 54, 0.4);
        }
        
        .results-summary {
            background: rgba(33, 150, 243, 0.1);
            border: 1px solid rgba(33, 150, 243, 0.3);
            border-radius: 10px;
            padding: 15px;
            margin: 15px 0;
            text-align: center;
        }
        
        .results-summary p {
            color: #81C784;
            margin: 0;
            font-size: 1.1em;
        }
        
        .results-summary strong {
            color: #4CAF50;
            font-size: 1.2em;
        }
        
        /* Enhanced zone cards for filtered view */
        .data-card {
            position: relative;
            transition: all 0.3s ease;
        }
        
        .data-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(76, 175, 80, 0.3);
        }
        
        /* Filter indicator */
        .filter-indicator {
            position: fixed;
            top: 20px;
            right: 20px;
            background: rgba(76, 175, 80, 0.9);
            color: white;
            padding: 10px 15px;
            border-radius: 20px;
            font-size: 0.9em;
            z-index: 100;
            display: none;
        }
        
        .filter-indicator.active {
            display: block;
            animation: slideIn 0.3s ease;
        }
        
        @keyframes slideIn {
            from {
                transform: translateX(100%);
                opacity: 0;
            }
            to {
                transform: translateX(0);
                opacity: 1;
            }
        }
        
        /* Loading state */
        .loading-overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 1000;
        }
        
        .loading-spinner {
            width: 50px;
            height: 50px;
            border: 5px solid rgba(76, 175, 80, 0.3);
            border-top: 5px solid #4CAF50;
            border-radius: 50%;
            animation: spin 1s linear infinite;
        }
        
        @keyframes spin {
            0% { transform: rotate(0deg); }
            100% { transform: rotate(360deg); }
        }
        
        /* Responsive design */
        @media (max-width: 768px) {
            .filter-row {
                grid-template-columns: 1fr;
            }
            
            .filter-actions {
                flex-direction: column;
                width: 100%;
            }
            
            .filter-btn {
                width: 100%;
                justify-content: center;
            }
        }
        
        /* No results state */
        .no-results {
            text-align: center;
            padding: 60px 20px;
            background: rgba(255, 193, 7, 0.1);
            border-radius: 15px;
            border: 2px solid rgba(255, 193, 7, 0.3);
            margin: 20px 0;
        }
        
        .no-results h3 {
            color: #ffc107;
            font-size: 1.5em;
            margin-bottom: 15px;
        }
        
        .no-results p {
            color: #C8E6C9;
            margin-bottom: 20px;
        }
        
        .no-results .suggestions {
            background: rgba(255, 193, 7, 0.1);
            padding: 15px;
            border-radius: 10px;
            margin-top: 15px;
        }
        
        .no-results .suggestions h4 {
            color: #ffc107;
            margin-bottom: 10px;
        }
        
        .no-results .suggestions ul {
            text-align: left;
            color: #C8E6C9;
            padding-left: 20px;
        }
    </style>
    
    <script>
        // Filter functionality
        function clearFilters() {
            // Clear all form inputs
            document.getElementById('filterForm').reset();
            
            // Redirect to zones page without query parameters
            window.location.href = '/zones';
        }
        
        // Auto-submit form on certain changes
        document.addEventListener('DOMContentLoaded', function() {
            const form = document.getElementById('filterForm');
            const selects = form.querySelectorAll('select');
            
            // Auto-submit on select changes
            selects.forEach(select => {
                select.addEventListener('change', function() {
                    showLoadingOverlay();
                    form.submit();
                });
            });
            
            // Show filter indicator if filters are active
            const hasActiveFilters = checkActiveFilters();
            if (hasActiveFilters) {
                showFilterIndicator();
            }
            
            // Add search input debouncing
            const searchInput = document.getElementById('search');
            let searchTimeout;
            
            searchInput.addEventListener('input', function() {
                clearTimeout(searchTimeout);
                searchTimeout = setTimeout(() => {
                    if (this.value.length >= 3 || this.value.length === 0) {
                        showLoadingOverlay();
                        form.submit();
                    }
                }, 500);
            });
        });
        
        function checkActiveFilters() {
            const form = document.getElementById('filterForm');
            const formData = new FormData(form);
            
            for (let [key, value] of formData.entries()) {
                if (value && value.trim() !== '' && key !== 'sort_by' && key !== 'sort_order') {
                    return true;
                }
            }
            return false;
        }
        
        function showFilterIndicator() {
            let indicator = document.querySelector('.filter-indicator');
            if (!indicator) {
                indicator = document.createElement('div');
                indicator.className = 'filter-indicator';
                indicator.innerHTML = 'üîç Filters Active';
                document.body.appendChild(indicator);
            }
            indicator.classList.add('active');
        }
        
        function showLoadingOverlay() {
            let overlay = document.querySelector('.loading-overlay');
            if (!overlay) {
                overlay = document.createElement('div');
                overlay.className = 'loading-overlay';
                overlay.innerHTML = '<div class="loading-spinner"></div>';
                document.body.appendChild(overlay);
            }
            overlay.style.display = 'flex';
        }
        
        // Quick filter buttons
        function quickFilter(type, value) {
            const form = document.getElementById('filterForm');
            
            // Clear existing filters
            form.reset();
            
            // Set the specific filter
            if (type === 'access_level') {
                document.getElementById('access_level').value = value;
            } else if (type === 'climate') {
                document.getElementById('climate').value = value;
            }
            
            showLoadingOverlay();
            form.submit();
        }
        
        // Export filtered results
        function exportResults() {
            const currentUrl = new URL(window.location);
            currentUrl.pathname = '/api/zones/export';
            window.open(currentUrl.toString(), '_blank');
        }
        
        // Advanced filter toggle
        function toggleAdvancedFilters() {
            const advancedSection = document.querySelector('.advanced-filters');
            if (advancedSection) {
                advancedSection.style.display = 
                    advancedSection.style.display === 'none' ? 'block' : 'none';
            }
        }
        
        // Filter presets
        const filterPresets = {
            'restricted-zones': {
                access_level: 'Restricted',
                sort_by: 'area',
                sort_order: 'DESC'
            },
            'large-zones': {
                min_area: 300,
                sort_by: 'area',
                sort_order: 'DESC'
            },
            'high-surveillance': {
                min_cameras: 20,
                sort_by: 'camera_traps',
                sort_order: 'DESC'
            }
        };
        
        function applyPreset(presetName) {
            const preset = filterPresets[presetName];
            if (!preset) return;
            
            const form = document.getElementById('filterForm');
            form.reset();
            
            Object.keys(preset).forEach(key => {
                const element = document.getElementById(key);
                if (element) {
                    element.value = preset[key];
                }
            });
            
            showLoadingOverlay();
            form.submit();
        }
        
        // Add preset buttons to the page
        document.addEventListener('DOMContentLoaded', function() {
            const filterSection = document.querySelector('.filter-section');
            if (filterSection) {
                const presetDiv = document.createElement('div');
                presetDiv.className = 'filter-presets';
                presetDiv.innerHTML = `
                    <h4 style="color: #4CAF50; margin: 15px 0 10px 0;">Quick Filters:</h4>
                    <div style="display: flex; gap: 10px; flex-wrap: wrap;">
                        <button type="button" class="preset-btn" onclick="applyPreset('restricted-zones')">
                            üîí Restricted Zones
                        </button>
                        <button type="button" class="preset-btn" onclick="applyPreset('large-zones')">
                            üìè Large Zones (300+ sq km)
                        </button>
                        <button type="button" class="preset-btn" onclick="applyPreset('high-surveillance')">
                            üìπ High Surveillance (20+ cameras)
                        </button>
                    </div>
                `;
                filterSection.appendChild(presetDiv);
            }
        });
        
        // Zone action functions
        function viewZoneDetails(zoneId) {
            // Create a modal to show detailed zone information
            const modal = document.createElement('div');
            modal.className = 'modal-overlay';
            modal.innerHTML = `
                <div class="modal-content">
                    <div class="modal-header">
                        <h3>Zone Details - ${zoneId}</h3>
                        <button class="modal-close" onclick="this.closest('.modal-overlay').remove()">√ó</button>
                    </div>
                    <div class="modal-body">
                        <div class="loading-spinner"></div>
                        <p>Loading zone details...</p>
                    </div>
                </div>
            `;
            
            document.body.appendChild(modal);
            
            // Fetch zone details (you can implement this API endpoint)
            fetch(`/api/zones/details/${zoneId}`)
                .then(response => response.json())
                .then(data => {
                    if (data.success) {
                        displayZoneDetailsInModal(modal, data.zone);
                    } else {
                        modal.querySelector('.modal-body').innerHTML = 
                            '<p style="color: #f44336;">Failed to load zone details.</p>';
                    }
                })
                .catch(error => {
                    console.error('Error fetching zone details:', error);
                    modal.querySelector('.modal-body').innerHTML = 
                        '<p style="color: #f44336;">Error loading zone details.</p>';
                });
        }
        
        function displayZoneDetailsInModal(modal, zone) {
            const modalBody = modal.querySelector('.modal-body');
            modalBody.innerHTML = `
                <div class="zone-detail-grid">
                    <div class="detail-section">
                        <h4>Basic Information</h4>
                        <div class="detail-item">
                            <span class="detail-label">Zone ID:</span>
                            <span class="detail-value">${zone.zone_id}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Zone Name:</span>
                            <span class="detail-value">${zone.zone_name}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Area:</span>
                            <span class="detail-value">${zone.area} sq km</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Climate:</span>
                            <span class="detail-value">${zone.climate}</span>
                        </div>
                    </div>
                    
                    <div class="detail-section">
                        <h4>Security & Access</h4>
                        <div class="detail-item">
                            <span class="detail-label">Access Level:</span>
                            <span class="detail-value access-${zone.access_level.toLowerCase().replace(/\s+/g, '-')}">${zone.access_level}</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Camera Traps:</span>
                            <span class="detail-value">${zone.camera_traps} active</span>
                        </div>
                        <div class="detail-item">
                            <span class="detail-label">Camera Density:</span>
                            <span class="detail-value">${(zone.camera_traps / zone.area).toFixed(2)} per sq km</span>
                        </div>
                    </div>
                </div>
                
                <div class="species-section">
                    <h4>Wildlife Information</h4>
                    <div class="species-content">
                        <span class="detail-label">Primary Species:</span>
                        <p class="species-description">${zone.primary_species}</p>
                    </div>
                </div>
                
                <div class="modal-actions">
                    <button class="action-btn edit-btn" onclick="editZone('${zone.zone_id}')">
                        ‚úèÔ∏è Edit Zone
                    </button>
                    <button class="action-btn view-btn" onclick="viewZoneOnMap('${zone.zone_id}')">
                        üó∫Ô∏è View on Map
                    </button>
                </div>
            `;
        }
        
        function editZone(zoneId) {
            // Redirect to edit page or show edit modal
            showNotification(`Edit functionality for zone ${zoneId} will be implemented soon!`, 'info');
        }
        
        function viewZoneOnMap(zoneId) {
            // Show zone on map (future implementation)
            showNotification(`Map view for zone ${zoneId} will be available soon!`, 'info');
        }
        
        function showNotification(message, type = 'info') {
            const notification = document.createElement('div');
            notification.className = `notification notification-${type}`;
            notification.textContent = message;
            
            notification.style.cssText = `
                position: fixed; top: 20px; right: 20px; z-index: 1001;
                padding: 15px 20px; border-radius: 8px; color: white;
                font-weight: 500; max-width: 300px;
                transform: translateX(100%); transition: transform 0.3s ease;
                ${type === 'success' ? 'background: #4CAF50;' : 
                  type === 'error' ? 'background: #f44336;' : 
                  type === 'warning' ? 'background: #ff9800;' : 'background: #2196F3;'}
            `;
            
            document.body.appendChild(notification);
            setTimeout(() => notification.style.transform = 'translateX(0)', 100);
            setTimeout(() => {
                notification.style.transform = 'translateX(100%)';
                setTimeout(() => notification.remove(), 300);
            }, 4000);
        }
