<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link rel="stylesheet" href="../style.css">
</head>

<body>
    <div class="bg-animation">
        <!-- Floating leaves will be generated by JavaScript -->
    </div>
    <div class="container">
        <a href="/" class="back-btn">‚Üê Back to Dashboard</a>
        <!-- Staff Section -->
        <div id="staff" class="content-section">
            <h2 class="section-title">üëÆ Rangers & Staff Directory</h2>

            <div class="stats-container">
                <div class="stat-item">
                    <div class="stat-number"><%= staff.length %></div>
                    <div class="stat-label">Total Staff</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number"><%= staff.filter(s => s.category && s.category.toLowerCase().includes('field')).length %></div>
                    <div class="stat-label">Field Rangers</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number"><%= staff.filter(s => s.shift && (s.shift.toLowerCase().includes('morning') || s.shift.toLowerCase().includes('day'))).length %></div>
                    <div class="stat-label">Day Shift Staff</div>
                </div>
            </div>

            <a href="/addStaff" class="add-btn" style="text-decoration: none; display: inline-block; text-align: center;">+ Add New Staff</a>

            <div class="data-grid">
                <div class="data-card">
                    <div class="card-header">
                        <span class="icon">üë®‚Äçüåæ</span>Raj Kumar
                    </div>
                    <div class="card-content">
                        <p><strong>Role:</strong> Senior Forest Ranger</p>
                        <p><strong>Employee ID:</strong> RNG-101</p>
                        <p><strong>Assigned Zone:</strong> Core Zone A</p>
                        <p><strong>Shift:</strong> Morning (6 AM - 2 PM)</p>
                        <p><strong>Experience:</strong> 12 years</p>
                    </div>
                </div>

                <div class="data-card">
                    <div class="card-header">
                        <span class="icon">üë©‚Äç‚öïÔ∏è</span>Dr. Priya Sharma
                    </div>
                    <div class="card-content">
                        <p><strong>Role:</strong> Wildlife Veterinarian</p>
                        <p><strong>Employee ID:</strong> VET-201</p>
                        <p><strong>Assigned Zone:</strong> Medical Center</p>
                        <p><strong>Shift:</strong> Day (9 AM - 6 PM)</p>
                        <p><strong>Specialization:</strong> Large Mammals</p>
                    </div>
                </div>

                <% staff.map(({employee_id,employee_name,age,gender,assigned_zone,experience_years,shift,
                    role,category})=>{ %>
                    <div class="data-card">
                        <div class="card-header">
                            <%if (gender=='Male'){%>
                                <span class="icon">üë®‚Äçüíº</span>
                            <%}else if (gender=='Female'){%>
                                <span class="icon">üë©‚Äçüíº</span>
                            <%}else{%>
                                <span class="icon">üë§</span>
                            <%}%>
                            <%=employee_name || 'Unknown'%>
                        </div>
                        <div class="card-content">
                            <p><strong>Role:</strong>
                                <%=role || 'Not specified'%>
                            </p>
                            <p><strong>Employee ID:</strong>
                                <%=employee_id%>
                            </p>
                            <p><strong>Age:</strong>
                                <%=age || 'Not specified'%> years
                            </p>
                            <p><strong>Assigned Zone:</strong>
                                <%=assigned_zone || 'Not assigned'%>
                            </p>
                            <p><strong>Shift:</strong>
                                <%=shift || 'Not specified'%>
                            </p>
                            <p><strong>Experience:</strong>
                                <%=experience_years || 0%> years
                            </p>
                            <p><strong>Category:</strong>
                                <%=category || 'Not specified'%>
                            </p>
                        </div>
                    </div>
                    <%})%>
            </div>
        </div>
    </div>
    <script src=" ../app.js">
    </script>
</body>

</html>