<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>WildGuard Sanctuary - Visitor Feedback</title>
    <link rel="stylesheet" href="feedback.css">
</head>
<body>
    <div class="bg-animation"></div>

    <div class="container">
        <div class="header">
            <h1>🌿 WildGuard Sanctuary</h1>
            <p>Visitor Feedback Portal</p>
        </div>

        <div class="form-section">
            <a href="login.html" class="back-btn">← Back to Login</a>
            
            <h2 class="section-title">⭐ Visitor Feedback</h2>
            
            <form id="feedbackForm">
                <div class="form-row">
                    <div class="form-group has-icon">
                        <label class="form-label">Your Name</label>
                        <input type="text" class="form-input" placeholder="Enter your name" required>
                        <span class="input-icon">👤</span>
                    </div>
                    <div class="form-group has-icon">
                        <label class="form-label">Email Address</label>
                        <input type="email" class="form-input" placeholder="your.email@example.com" required>
                        <span class="input-icon">📧</span>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Visit Date</label>
                        <input type="date" class="form-input" required>
                    </div>
                    <div class="form-group has-icon">
                        <label class="form-label">Ticket/Booking ID</label>
                        <input type="text" class="form-input" placeholder="WGS-2025-0123">
                        <span class="input-icon">🎫</span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Overall Experience Rating</label>
                    <div class="star-rating" data-rating-group="overall">
                        <span class="star" data-value="1">⭐</span>
                        <span class="star" data-value="2">⭐</span>
                        <span class="star" data-value="3">⭐</span>
                        <span class="star" data-value="4">⭐</span>
                        <span class="star" data-value="5">⭐</span>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Wildlife Sightings</label>
                    <div class="form-checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" id="tiger-seen" value="tiger">
                            <label for="tiger-seen">🐅 Tiger</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="elephant-seen" value="elephant">
                            <label for="elephant-seen">🐘 Elephant</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="leopard-seen" value="leopard">
                            <label for="leopard-seen">🐆 Leopard</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="deer-seen" value="deer">
                            <label for="deer-seen">🦌 Deer</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="birds-seen" value="birds">
                            <label for="birds-seen">🦅 Birds</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="other-seen" value="other">
                            <label for="other-seen">🐾 Other Animals</label>
                        </div>
                    </div>
                </div>

                <div class="form-row">
                    <div class="form-group">
                        <label class="form-label">Guide Service Rating</label>
                        <div class="star-rating" data-rating-group="guide">
                            <span class="star" data-value="1">⭐</span>
                            <span class="star" data-value="2">⭐</span>
                            <span class="star" data-value="3">⭐</span>
                            <span class="star" data-value="4">⭐</span>
                            <span class="star" data-value="5">⭐</span>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="form-label">Facility Rating</label>
                        <div class="star-rating" data-rating-group="facility">
                            <span class="star" data-value="1">⭐</span>
                            <span class="star" data-value="2">⭐</span>
                            <span class="star" data-value="3">⭐</span>
                            <span class="star" data-value="4">⭐</span>
                            <span class="star" data-value="5">⭐</span>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">What did you like most?</label>
                    <div class="form-checkbox-group">
                        <div class="checkbox-item">
                            <input type="checkbox" id="wildlife-diversity" value="wildlife-diversity">
                            <label for="wildlife-diversity">🌿 Wildlife Diversity</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="guide-knowledge" value="guide-knowledge">
                            <label for="guide-knowledge">🧠 Guide Knowledge</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="photography" value="photography">
                            <label for="photography">📸 Photography Opportunities</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="facilities" value="facilities">
                            <label for="facilities">🏢 Facilities</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="conservation" value="conservation">
                            <label for="conservation">💚 Conservation Efforts</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="checkbox" id="safety" value="safety">
                            <label for="safety">🛡️ Safety Measures</label>
                        </div>
                    </div>
                </div>

                <div class="form-group">
                    <label class="form-label">Comments & Suggestions</label>
                    <textarea class="form-textarea" placeholder="Share your detailed feedback, suggestions for improvement, or memorable moments from your visit..." rows="5"></textarea>
                </div>

                <div class="form-group">
                    <label class="form-label">Would you recommend WildGuard Sanctuary to others?</label>
                    <div class="form-checkbox-group">
                        <div class="checkbox-item">
                            <input type="radio" id="recommend-yes" name="recommend" value="yes" required>
                            <label for="recommend-yes">✅ Definitely Yes</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="radio" id="recommend-maybe" name="recommend" value="maybe">
                            <label for="recommend-maybe">🤔 Maybe</label>
                        </div>
                        <div class="checkbox-item">
                            <input type="radio" id="recommend-no" name="recommend" value="no">
                            <label for="recommend-no">❌ No</label>
                        </div>
                    </div>
                </div>

                <div class="info-card">
                    <strong>🙏 Thank you for your feedback!</strong><br>
                    Your feedback helps us improve our conservation efforts and visitor experience. We value every opinion and use it to enhance our wildlife sanctuary.
                </div>

                <div class="loading-spinner" id="feedbackLoading"></div>
                <div class="success-message" id="feedbackSuccess">
                    ⭐ Thank you for your valuable feedback! Your review has been submitted successfully.
                </div>

                <button type="submit" class="submit-btn">
                    <span class="icon">⭐</span>Submit Feedback
                </button>
            </form>
        </div>
    </div>

    <script src="script.js"></script>

    <script>
        // Star Rating System
        class StarRating {
            constructor(container) {
                this.container = container;
                this.stars = container.querySelectorAll('.star');
                this.rating = 0;
                this.init();
            }

            init() {
                this.stars.forEach((star, index) => {
                    star.addEventListener('click', () => this.setRating(index + 1));
                    star.addEventListener('mouseenter', () => this.previewRating(index + 1));
                });

                this.container.addEventListener('mouseleave', () => this.showCurrentRating());
            }

            setRating(rating) {
                this.rating = rating;
                this.container.setAttribute('data-rating', rating);
                this.showCurrentRating();
            }

            previewRating(rating) {
                this.updateStars(rating);
            }

            showCurrentRating() {
                this.updateStars(this.rating);
            }

            updateStars(rating) {
                this.stars.forEach((star, index) => {
                    if (index < rating) {
                        star.classList.add('active');
                    } else {
                        star.classList.remove('active');
                    }
                });
            }

            reset() {
                this.rating = 0;
                this.container.removeAttribute('data-rating');
                this.updateStars(0);
            }
        }

        // Initialize star rating systems
        let starRatings = [];

        function initializeStarRatings() {
            const ratingContainers = document.querySelectorAll('.star-rating');
            starRatings = Array.from(ratingContainers).map(container => new StarRating(container));
        }

        // Form submission handler
        function handleFormSubmission() {
            const form = document.getElementById('feedbackForm');
            const loading = document.getElementById('feedbackLoading');
            const success = document.getElementById('feedbackSuccess');

            form.addEventListener('submit', function(e) {
                e.preventDefault();

                const formData = {
                    name: form.querySelector('input[type="text"][placeholder="Enter your name"]').value,
                    email: form.querySelector('input[type="email"]').value,
                    visitDate: form.querySelector('input[type="date"]').value,
                    ticketId: form.querySelector('input[type="text"][placeholder="WGS-2025-0123"]').value,
                    ratings: {
                        overall: starRatings.find(r => r.container.dataset.ratingGroup === 'overall')?.rating || 0,
                        guide: starRatings.find(r => r.container.dataset.ratingGroup === 'guide')?.rating || 0,
                        facility: starRatings.find(r => r.container.dataset.ratingGroup === 'facility')?.rating || 0,
                    },
                    sightings: Array.from(form.querySelectorAll('input[id$="-seen"]:checked')).map(cb => cb.value),
                    likedMost: Array.from(form.querySelectorAll('input[id*="-diversity"], input[id*="-knowledge"], input[id*="-photography"], input[id*="-facilities"], input[id*="-conservation"], input[id*="-safety"]'))
                                    .filter(cb => cb.checked)
                                    .map(cb => cb.value),
                    comments: form.querySelector('textarea').value,
                    recommend: form.querySelector('input[name="recommend"]:checked')?.value || 'Not answered'
                };

                // Print the form data to the console
                console.log('--- Feedback Submission ---');
                console.log(formData);
                console.log('-------------------------');

                loading.style.display = 'block';

                fetch('/feedback', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json'
                    },
                    body: JSON.stringify(formData)
                })
                .then(response => response.json())
                .then(data => {
                    loading.style.display = 'none';
                    if (data.success) {
                        success.style.display = 'block';
                        showNotification('Feedback submitted successfully!');
                        setTimeout(() => {
                            success.style.display = 'none';
                            form.reset();
                            starRatings.forEach(rating => rating.reset());
                        }, 5000);
                    } else {
                        throw new Error(data.message || 'An unknown error occurred.');
                    }
                })
                .catch(error => {
                    loading.style.display = 'none';
                    console.error('Submission Error:', error);
                    showNotification('Error: Could not submit feedback.', 'error');
                });
            });
        }

        // Initialize everything when DOM is loaded
        document.addEventListener('DOMContentLoaded', function() {
            initializeStarRatings();
            handleFormSubmission();
            
            setTimeout(() => {
                showNotification('Share your wildlife experience with us!');
            }, 1000);
        });
    </script>
</body>
</html>