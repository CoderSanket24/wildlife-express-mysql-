<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <style>
        .nav-tabs {
            display: flex;
            justify-content: center;
            margin-bottom: 30px;
            flex-wrap: wrap;
            gap: 10px;
            
            align-items: center;
        }
        
        .nav-tab {
            background: rgba(76, 175, 80, 0.2);
            color: #4CAF50;
            border: 2px solid rgba(76, 175, 80, 0.3);
            padding: 12px 24px;
            border-radius: 25px;
            cursor: pointer;
            transition: all 0.3s ease;
            backdrop-filter: blur(5px);
            font-weight: bold;
            position: relative;
            overflow: hidden;
            
            width: 15rem;
        }
        
        .nav-tab::before {
            content: '';
            position: absolute;
            top: 0;
            left: -100%;
            width: 100%;
            height: 100%;
            background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.2), transparent);
            transition: left 0.5s;
        }
        
        .nav-tab:hover::before {
            left: 100%;
        }
        
        .nav-tab:hover,
        .nav-tab.active {
            background: rgba(76, 175, 80, 0.4);
            transform: translateY(-3px);
            box-shadow: 0 8px 25px rgba(76, 175, 80, 0.3);
        }
        .back-btn {
    background: rgba(76, 175, 80, 0.2);
    color: #4CAF50;
    border: 2px solid rgba(76, 175, 80, 0.3);
    padding: 10px 20px;
    border-radius: 25px;
    cursor: pointer;
    font-weight: bold;
    margin-bottom: 30px;
    transition: all 0.3s ease;
    text-decoration: none;
    display: inline-block;
}
        </style>
        <link rel="stylesheet" href="../style.css">
</head>

<body>
    <div class="bg-animation">
        <!-- Floating leaves will be generated by JavaScript -->
    </div>
    <div class="container">
        <a href="/" class="back-btn">‚Üê Back to Dashboard</a>
        <!-- Visitors Section -->
        <div id="visitors" class="content-section">
            <h2 class="section-title">üé´ Visitor & Tourism Records</h2>

            <div class="stats-container">
                <div class="stat-item">
                    <div class="stat-number">1247</div>
                    <div class="stat-label">Monthly Visitors</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number">45</div>
                    <div class="stat-label">Today's Visitors</div>
                </div>
                <div class="stat-item">
                    <div class="stat-number"><%= totalVisitors %></div>
                    <div class="stat-label">Total Visitors</div>
                </div>
            </div>

            <%if(user.role === 'admin'){%>
                <button class="add-btn" onclick="window.location.href='/booking'">+ Generate Ticket</button>
            <%}%>

            <div class="nav-tabs">
                <div class="nav-tab active" onclick="showSection('Visitors')">
                    <span class="icon">üë•</span>Visitors Info
                </div>
                <div class="nav-tab" onclick="showSection('Tickets')">
                    <span class="icon">üéüÔ∏è</span>Tickets Info
                </div>
            </div>

            <div id="Visitors" class="data-grid">
                <div class="data-card">
                    <div class="card-header">
                        <span class="icon">üë•</span>Group Booking #VIS-2025-0145
                    </div>
                    <div class="card-content">
                        <p><strong>Lead Visitor:</strong> Amit Patel</p>
                        <p><strong>Group Size:</strong> 6 people</p>
                        <p><strong>Visit Date:</strong> Jan 22, 2025</p>
                        <p><strong>Guide Assigned:</strong> Vikram Singh</p>
                        <p><strong>Safari Zone:</strong> Tourism Zone C</p>
                    </div>
                </div>

                <% visitors_info.map(({name, aadhar_id, age, address})=> { %>
                    <div class="data-card">
                        <div class="card-header">
                            <span class="icon">üë•</span>Booking #VIS-2025-0145
                        </div>
                        <div class="card-content">
                            <p><strong>Visitor Name: </strong>
                                <%=name%>
                            </p>
                            <p><strong>Visitor age: </strong>
                                <%=age%>
                            </p>
                            <p><strong>Aadhar Id: </strong>
                                <%=aadhar_id%>
                            </p>
                            <p><strong>Address: </strong>
                                <%=address%>
                            </p>
                        </div>
                    </div>
                    <% }) %>
            </div>
            <div id="Tickets" class="data-grid inactive">
                <% if (tickets && tickets.length > 0) { %>
                    <% tickets.forEach(ticket => { %>
                        <div class="data-card">
                            <div class="card-header">
                                <span class="icon">üéüÔ∏è</span>Ticket #<%= ticket.booking_id %>
                            </div>
                            <div class="card-content">
                                <p><strong>Visitor:</strong> <%= ticket.visitor_name %></p>
                                <p><strong>Contact:</strong> <%= ticket.contact_number %></p>
                                <p><strong>Safari Date:</strong> <%= new Date(ticket.safari_date).toLocaleDateString('en-GB') %></p>
                                <p><strong>Time Slot:</strong> <%= ticket.time_slot %></p>
                                <p><strong>Zone:</strong> <%= ticket.safari_zone %></p>
                                <p><strong>Persons:</strong> <%= ticket.person_count %></p>
                                <p><strong>Total Amount:</strong> ‚Çπ<%= Number(ticket.total_amount).toLocaleString('en-IN') %></p>
                                <p><strong>Status:</strong> <span class="status status-<%= ticket.booking_status.toLowerCase() %>"><%= ticket.booking_status %></span></p>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="data-card">
                        <div class="card-content">
                            <p>No ticket information available.</p>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
        <div class="loading">
            <div class="spinner"></div>
            Loading data...
        </div>
    </div>
    <script src="./script.js"></script>
    <script>
        function showSection(sectionId) {
            // Hide all sections
            const sections = document.querySelectorAll('.data-grid');
            sections.forEach(section => {
                section.classList.add('inactive');
            });

            // Remove active class from all tabs
            const tabs = document.querySelectorAll('.nav-tab');
            tabs.forEach(tab => {
                tab.classList.remove('active');
            });

            // Show loading
            const loading = document.querySelector('.loading');
            loading.style.display = 'block';

            setTimeout(() => {
                // Hide loading and show section
                loading.style.display = 'none';
                document.getElementById(sectionId).classList.remove('inactive');

                // Add active class to clicked tab
                event.target.closest('.nav-tab').classList.add('active');
            }, 500);
        }
    </script>
</body>

</html>